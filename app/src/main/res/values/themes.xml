<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UnipiAudioStories" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/light_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/grey_dark_bg</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyNestedScroll">
        <item name="android:clipToPadding">false</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:paddingBottom">@dimen/dimen_100</item>
    </style>

    <style name="AppRecycler">
        <item name="android:clipToPadding">false</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:paddingBottom">@dimen/dimen_xl</item>
    </style>

    <!-- Button -->
    <style name="AppButton">
        <item name="android:backgroundTint">@color/light_blue</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SecondaryBtn">
        <item name="android:backgroundTint">@color/light_blue</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Text Styles -->
    <style name="text_22_bold_white" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_22</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="text_20_bold_dark_grey" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_20</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey_dark_bg</item>
    </style>

    <style name="text_18_bold_center" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/dimen_s</item>
    </style>

    <style name="text_18_normal_70_white" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:alpha">0.7</item>
    </style>

    <style name="text_18_bold" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_16_bold" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>